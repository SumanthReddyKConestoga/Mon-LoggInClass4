global:
  cloud: others
  clusterName: {{ cluster_name }}
  deploymentEnvironment: {{ deployment_env }}

# Upstream OpenTelemetry Collector (SigNoz on TrueNAS)
otelCollectorEndpoint: "{{ signoz_host_ip }}:{{ signoz_otlp_grpc_port }}"
otelInsecure: true

# Enable essential pipelines to ship K8s metrics + logs + events out to SigNoz
presets:
  otlpExporter:
    enabled: true        # REQUIRED to send data upstream
  hostMetrics:
    enabled: true
    collectionInterval: 30s
  kubeletMetrics:
    enabled: true
  kubernetesAttributes:
    enabled: true
  clusterMetrics:
    enabled: true
  k8sEvents:
    enabled: true
  logsCollection:
    enabled: true
    blacklist:
      enabled: true
      namespaces:
        - kube-system
